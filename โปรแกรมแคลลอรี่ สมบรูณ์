import tkinter as tk
from tkinter import messagebox

def calculate():
    try:
        morning = int(entry_morning.get())
        lunch = int(entry_lunch.get())
        evening = int(entry_evening.get())

        total = morning + lunch + evening

        # ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏™‡∏µ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏ï‡∏≤‡∏°‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÅ‡∏Ñ‡∏•‡∏≠‡∏£‡∏µ‡πà (‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏Å‡∏≤‡∏£‡∏ï‡∏Å‡πÅ‡∏ï‡πà‡∏á‡πÄ‡∏ä‡∏¥‡∏á‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô)
        if total > 2000:
            result_label.config(fg="#e74c3c") # ‡∏™‡∏µ‡πÅ‡∏î‡∏á‡∏ñ‡πâ‡∏≤‡∏ó‡∏≤‡∏ô‡πÄ‡∏¢‡∏≠‡∏∞
        else:
            result_label.config(fg="#27ae60") # ‡∏™‡∏µ‡πÄ‡∏Ç‡∏µ‡∏¢‡∏ß‡∏ñ‡πâ‡∏≤‡∏û‡∏≠‡∏î‡∏µ

        result_label.config(
            text=f"--- ‡∏™‡∏£‡∏∏‡∏õ‡πÅ‡∏Ñ‡∏•‡∏≠‡∏£‡∏µ‡πà ---\n"
                 f"‡πÄ‡∏ä‡πâ‡∏≤: {morning} kcal\n"
                 f"‡∏Å‡∏•‡∏≤‡∏á‡∏ß‡∏±‡∏ô: {lunch} kcal\n"
                 f"‡πÄ‡∏¢‡πá‡∏ô: {evening} kcal\n"
                 f"‡∏£‡∏ß‡∏°‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î: {total} kcal"
        )
    except ValueError:
        messagebox.showerror("‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î", "‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡πÄ‡∏â‡∏û‡∏≤‡∏∞‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡∏ô‡∏∞‡∏Ñ‡∏£‡∏±‡∏ö")

# --- ‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏™‡∏µ‡πÅ‡∏•‡∏∞‡∏ü‡∏≠‡∏ô‡∏ï‡πå ---
BG_MAIN = "#FDFEFE"      # ‡∏™‡∏µ‡∏û‡∏∑‡πâ‡∏ô‡∏´‡∏•‡∏±‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏ï‡πà‡∏≤‡∏á
BG_CARD = "#F4F6F7"      # ‡∏™‡∏µ‡∏û‡∏∑‡πâ‡∏ô‡∏´‡∏•‡∏±‡∏á‡∏Å‡∏•‡πà‡∏≠‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°
PRIMARY_COLOR = "#2ECC71" # ‡∏™‡∏µ‡πÄ‡∏Ç‡∏µ‡∏¢‡∏ß‡∏´‡∏•‡∏±‡∏Å (‡∏õ‡∏∏‡πà‡∏°)
TEXT_COLOR = "#2C3E50"    # ‡∏™‡∏µ‡∏ï‡∏±‡∏ß‡∏≠‡∏±‡∏Å‡∏©‡∏£‡πÄ‡∏Ç‡πâ‡∏°
FONT_TH = ("Leelawadee UI", 12) # ‡∏ü‡∏≠‡∏ô‡∏ï‡πå‡∏ó‡∏µ‡πà‡∏î‡∏π‡∏ó‡∏±‡∏ô‡∏™‡∏°‡∏±‡∏¢
FONT_BOLD = ("Leelawadee UI", 14, "bold")

# ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏ï‡πà‡∏≤‡∏á‡∏´‡∏•‡∏±‡∏Å
root = tk.Tk()
root.title("Calorie Tracker")
root.geometry("350x450")
root.config(bg=BG_MAIN)

# ‡∏´‡∏±‡∏ß‡∏Ç‡πâ‡∏≠‡πÇ‡∏õ‡∏£‡πÅ‡∏Å‡∏£‡∏°
tk.Label(root, text="Calories Calculator üçé", font=("Leelawadee UI", 18, "bold"), 
         bg=BG_MAIN, fg=PRIMARY_COLOR).pack(pady=20)

# ‡∏™‡∏£‡πâ‡∏≤‡∏á Frame ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏™‡πà‡∏ß‡∏ô‡∏£‡∏±‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡∏î‡∏π‡πÄ‡∏õ‡πá‡∏ô‡∏£‡∏∞‡πÄ‡∏ö‡∏µ‡∏¢‡∏ö
input_frame = tk.Frame(root, bg=BG_MAIN)
input_frame.pack(padx=20)

def create_input(label_text):
    """‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ä‡πà‡∏ß‡∏¢‡∏™‡∏£‡πâ‡∏≤‡∏á Label ‡πÅ‡∏•‡∏∞ Entry ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏•‡∏î‡πÇ‡∏Ñ‡πâ‡∏î‡∏ã‡πâ‡∏≥‡∏ã‡πâ‡∏≠‡∏ô"""
    tk.Label(input_frame, text=label_text, font=FONT_TH, bg=BG_MAIN, fg=TEXT_COLOR).pack(anchor="w")
    entry = tk.Entry(input_frame, font=FONT_TH, bd=0, highlightthickness=1, highlightbackground="#D5DBDB")
    entry.pack(fill="x", pady=(0, 10), ipady=5)
    return entry

entry_morning = create_input("‡∏°‡∏∑‡πâ‡∏≠‡πÄ‡∏ä‡πâ‡∏≤ (kcal):")
entry_lunch = create_input("‡∏°‡∏∑‡πâ‡∏≠‡∏Å‡∏•‡∏≤‡∏á‡∏ß‡∏±‡∏ô (kcal):")
entry_evening = create_input("‡∏°‡∏∑‡πâ‡∏≠‡πÄ‡∏¢‡πá‡∏ô (kcal):")

# ‡∏õ‡∏∏‡πà‡∏°‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡πÅ‡∏ö‡∏ö‡πÅ‡∏ï‡πà‡∏á‡∏™‡∏µ
btn_calculate = tk.Button(root, text="‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå", command=calculate,
                          font=FONT_BOLD, bg=PRIMARY_COLOR, fg="white",
                          activebackground="#27AE60", activeforeground="white",
                          cursor="hand2", bd=0, width=15)
btn_calculate.pack(pady=20)

# ‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå‡πÉ‡∏ô‡∏û‡∏∑‡πâ‡∏ô‡∏ó‡∏µ‡πà‡∏™‡∏µ‡πÄ‡∏ó‡∏≤‡∏≠‡πà‡∏≠‡∏ô
result_frame = tk.Frame(root, bg=BG_CARD, padx=10, pady=10, relief="flat")
result_frame.pack(fill="x", padx=30)

result_label = tk.Label(result_frame, text="‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå‡∏à‡∏∞‡πÅ‡∏™‡∏î‡∏á‡∏ï‡∏£‡∏á‡∏ô‡∏µ‡πâ", font=FONT_TH, 
                        bg=BG_CARD, fg="#7F8C8D", justify="left")
result_label.pack()

root.mainloop()
