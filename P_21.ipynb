import tkinter as tk
from tkinter import messagebox

def calculate_calories():
    """ฟังก์ชันสำหรับคำนวณเมื่อกดปุ่ม"""
    try:
        # รับค่าจากช่องกรอกข้อมูล (Entry)
        # ถ้าช่องว่างให้ถือว่าเป็น 0
        m_cal = int(entry_morning.get()) if entry_morning.get() else 0
        l_cal = int(entry_lunch.get()) if entry_lunch.get() else 0
        e_cal = int(entry_evening.get()) if entry_evening.get() else 0
        
        # คำนวณผลรวม
        total = m_cal + l_cal + e_cal
        
        # อัปเดตข้อความแสดงผล
        result_label.config(text=f"รวมทั้งหมด: {total} kcal", fg="blue")
        
    except ValueError:
        # กรณีผู้ใช้กรอกตัวอักษรแทนตัวเลข
        messagebox.showerror("ข้อผิดพลาด", "กรุณากรอกข้อมูลเป็นตัวเลขเท่านั้น")

# --- ส่วนสร้างหน้าต่างโปรแกรม ---
root = tk.Tk()
root.title("โปรแกรมคำนวณแคลอรี่")
root.geometry("300x250") # กำหนดขนาดหน้าต่าง (กว้าง x สูง)

# 1. ส่วนมื้อเช้า
tk.Label(root, text="แคลอรี่มื้อเช้า (kcal):").pack(pady=5)
entry_morning = tk.Entry(root)
entry_morning.pack()

# 2. ส่วนมื้อกลางวัน
tk.Label(root, text="แคลอรี่มื้อกลางวัน (kcal):").pack(pady=5)
entry_lunch = tk.Entry(root)
entry_lunch.pack()

# 3. ส่วนมื้อเย็น
tk.Label(root, text="แคลอรี่มื้อเย็น (kcal):").pack(pady=5)
entry_evening = tk.Entry(root)
entry_evening.pack()

# 4. ปุ่มคำนวณ
btn_calc = tk.Button(root, text="คำนวณ", command=calculate_calories, bg="#4CAF50", fg="white")
btn_calc.pack(pady=15)

# 5. ส่วนแสดงผลลัพธ์
result_label = tk.Label(root, text="รวมทั้งหมด: 0 kcal", font=("Arial", 14, "bold"))
result_label.pack(pady=5)

# เริ่มรันโปรแกรม
root.mainloop()
