<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>โปรแกรมคำนวณแคลอรี่รายวัน</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400;500;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Kanit', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }
        .glass-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 24px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body class="flex items-center justify-center p-4">

    <div class="glass-card w-full max-w-md p-8">
        <div class="text-center mb-8">
            <div class="inline-block p-3 bg-orange-100 rounded-full mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
            </div>
            <h1 class="text-2xl font-bold text-gray-800">โปรแกรมคำนวณแคลอรี่</h1>
            <p class="text-gray-500">บันทึกพลังงานที่คุณได้รับในวันนี้</p>
        </div>

        <div class="space-y-6">
            <!-- Input Fields -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">มื้อเช้า (kcal)</label>
                <input type="number" id="morning" value="0" min="0" 
                       class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-orange-400 focus:outline-none transition-all text-lg font-medium"
                       oninput="calculateTotal()">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">มื้อกลางวัน (kcal)</label>
                <input type="number" id="lunch" value="0" min="0"
                       class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-orange-400 focus:outline-none transition-all text-lg font-medium"
                       oninput="calculateTotal()">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">มื้อเย็น (kcal)</label>
                <input type="number" id="evening" value="0" min="0"
                       class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-orange-400 focus:outline-none transition-all text-lg font-medium"
                       oninput="calculateTotal()">
            </div>

            <!-- Result Section -->
            <div class="pt-6 border-t border-gray-100">
                <div class="bg-gray-50 rounded-2xl p-6 text-center">
                    <p class="text-gray-500 text-sm mb-1 uppercase tracking-wide">รวมทั้งหมด</p>
                    <div class="text-4xl font-bold text-orange-600">
                        <span id="totalDisplay">0</span> <small class="text-lg font-normal text-gray-400">kcal</small>
                    </div>
                </div>
            </div>

            <!-- Visual Bar -->
            <div class="relative pt-1">
                <div class="flex mb-2 items-center justify-between">
                    <div>
                        <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-orange-600 bg-orange-200">
                            Daily Progress
                        </span>
                    </div>
                </div>
                <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-orange-100">
                    <div id="progressBar" style="width:0%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-orange-500 transition-all duration-500"></div>
                </div>
            </div>

            <button onclick="resetForm()" class="w-full py-3 text-gray-500 hover:text-orange-500 transition-colors text-sm font-medium">
                ล้างข้อมูลทั้งหมด
            </button>
        </div>
    </div>

    <script>
        function calculateTotal() {
            // ดึงค่าจาก input
            const morning = parseFloat(document.getElementById('morning').value) || 0;
            const lunch = parseFloat(document.getElementById('lunch').value) || 0;
            const evening = parseFloat(document.getElementById('evening').value) || 0;

            // คำนวณรวม
            const total = morning + lunch + evening;

            // แสดงผล
            document.getElementById('totalDisplay').innerText = total.toLocaleString();

            // อัปเดต Progress Bar (สมมติเป้าหมายพื้นฐานที่ 2000 kcal)
            const goal = 2000;
            let percentage = (total / goal) * 100;
            if (percentage > 100) percentage = 100;
            
            document.getElementById('progressBar').style.width = percentage + '%';
        }

        function resetForm() {
            document.getElementById('morning').value = 0;
            document.getElementById('lunch').value = 0;
            document.getElementById('evening').value = 0;
            calculateTotal();
        }

        // เริ่มต้นคำนวณครั้งแรก
        window.onload = calculateTotal;
    </script>
</body>
</html>
